{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": [
          "es6",
          "dom"
      ],
      "noImplicitAny": false,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      //"watch": false,
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,

   
     
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
